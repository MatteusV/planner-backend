generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String
  image_url String?
  trips     Trip[]

  @@map("users")
}

model Trip {
  id          String   @id @default(uuid())
  destination String
  starts_at   DateTime
  ends_at     DateTime
  user_id     String
  image_url   String?

  is_confirmed Boolean  @default(false)
  created_at   DateTime @default(now())

  participants Participant[]
  activities   Activity[]
  links        Link[]
  user         User          @relation(fields: [user_id], references: [id])

  @@map("trips")
}

model Participant {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)
  trip_id      String

  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

model Activity {
  id        String   @id @default(uuid())
  title     String
  occurs_at DateTime

  trip_id String

  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("activities")
}

model Link {
  id      String @id @default(uuid())
  title   String
  url     String
  trip_id String

  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("links")
}
